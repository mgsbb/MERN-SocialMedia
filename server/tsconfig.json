{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,

        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,

        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
